<odoo>
    <record id="product_template_task_templates_extension" model="ir.ui.view">
        <field name="name">product.template.task.templates.extension</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']" position="after">
                <page name="required_documents" string="Required Documents">
                    <field name="document_required_type_ids">
                        <list editable="bottom" model="project.document.required.line">
                            <field name="document_type_id"/>
                            <field name="document_id"/>
                            <field name="is_required"/>
                        </list>
                        <form model="project.document.required.line">
                            <group>
                                <field name="document_type_id"/>
                                <field name="document_id"/>
                                <field name="is_required"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page name="deliverable_documents" string="Deliverable Documents">
                    <field name="document_type_ids">
                        <list editable="bottom" model="project.document.type.line">
                            <field name="document_type_id"/>
                            <field name="document_id"/>
                            <field name="is_required"/>
                        </list>
                        <form model="project.document.type.line">
                            <group>
                                <field name="document_type_id"/>
                                <field name="document_id"/>
                                <field name="is_required"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page name="task_templates" string="Task Templates" invisible="service_tracking != 'new_workflow'">
                    <div class="o_row mb-3">
                        <button name="action_select_existing_task_template" type="object" 
                                string="Select Existing Template" class="btn-primary"/>
                    </div>
                    <field name="task_template_ids">
                        <list>
                            <field name="sequence" widget="handle"/>
                            <field name="name"/>
                            <field name="user_ids" widget="many2many_tags"/>
                            <field name="stage_id"/>
                            <field name="planned_hours"/>
                            <field name="priority"/>
                            <field name="subtask_count"/>
                            <button name="action_open_subtasks_from_product" type="object" 
                                    icon="fa-tasks" title="Open Subtasks" 
                                    invisible="subtask_count == 0"/>
                        </list>
                        <form string="Task Template" class="o_form_project_tasks">
                            <sheet string="Task Template">
                                <div class="oe_button_box" name="button_box">
                                    <button name="action_open_subtasks_from_product" type="object" 
                                            class="oe_stat_button" icon="fa-tasks"
                                            invisible="subtask_count == 0">
                                        <div class="o_field_widget o_stat_info">
                                            <span class="o_stat_value"><field name="subtask_count"/></span>
                                            <span class="o_stat_text">Subtasks</span>
                                        </div>
                                    </button>
                                </div>
                                <group>
                                    <group>
                                        <field name="name" required="1"/>
                                        <field name="user_ids" string="Assignees" widget="many2many_avatar_user"/>
                                    </group>
                                    <group>
                                        <field name="stage_id" string="Initial Stage"/>
                                        <field name="planned_hours"/>
                                        <field name="sequence"/>
                                    </group>
                                </group>
                                <notebook>
                                    <page name="description_page" string="Description">
                                        <field name="description" type="html" placeholder="Add details about this task template..."/>
                                    </page>
                                    <page name="sub_tasks_page" string="Sub-tasks">
                                        <div class="o_row">
                                            <button name="action_open_subtasks_from_product" type="object" 
                                                    string="Open Subtasks" class="btn-primary"/>
                                            <button name="action_select_existing_task_template" type="object" 
                                                    string="Select Existing Template" class="btn-secondary"/>
                                        </div>
                                        <field name="subtask_ids" nolabel="1">
                                            <list editable="bottom">
                                                <field name="sequence" widget="handle"/>
                                                <field name="name"/>
                                                <field name="user_ids" widget="many2many_avatar_user"/>
                                                <field name="stage_id"/>
                                                <field name="planned_hours"/>
                                                <field name="priority"/>
                                                <field name="milestone_message"/>
                                            </list>
                                        </field>
                                    </page>
                                    <page name="extra_info" string="Extra Info">
                                        <group string="Checkpoint Configuration Rules">
                                            <field name="checkpoint_ids">
                                                <list editable="bottom">
                                                    <field name="checkpoint_ids" widget="many2many_tags"/>
                                                    <field name="stage_id"/>
                                                    <field name="milestone_id"/>
                                                    <field name="sequence"/>
                                                </list>
                                                <form>
                                                    <group>
                                                        <field name="checkpoint_ids" widget="many2many_tags"/>
                                                        <field name="stage_id"/>
                                                        <field name="milestone_id"/>
                                                        <field name="sequence"/>
                                                    </group>
                                                </form>
                                            </field>
                                        </group>
                                    </page>
                                </notebook>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Enhanced Product Task Template Form View -->
    <record id="product_task_template_form_enhanced" model="ir.ui.view">
        <field name="name">product.task.template.form.enhanced</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <form string="Product Task Template" class="o_form_project_tasks">
                <sheet string="Task Template">
                    <div class="oe_button_box" name="button_box">
                        <button name="action_open_subtasks_from_product" type="object" 
                                class="oe_stat_button" icon="fa-tasks"
                                invisible="subtask_count == 0">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_value"><field name="subtask_count"/></span>
                                <span class="o_stat_text">Subtasks</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title pe-0">
                        <h1 class="d-flex justify-content-between align-items-center">
                            <div class="d-flex w-100">
                                <field name="priority" widget="priority_switch" class="me-3"/>
                                <field name="name" options="{'line_breaks': False}" widget="text" 
                                       class="o_task_name text-truncate w-md-75 w-100 pe-2" 
                                       placeholder="Task Template Name..."/>
                            </div>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="product_tmpl_id" string="Product Template" required="1"/>
                            <field name="user_ids" string="Assignees" 
                                   class="o_task_user_field"
                                   options="{'no_open': True, 'no_quick_create': True}"
                                   widget="many2many_avatar_user"/>
                        </group>
                        <group>
                            <field name="stage_id" string="Initial Stage"/>
                            <field name="planned_hours"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description_page" string="Description">
                            <field name="description" type="html" 
                                   options="{'collaborative': true, 'resizable': false}" 
                                   placeholder="Add details about this task template..."/>
                        </page>
                        <page name="sub_tasks_page" string="Sub-tasks">
                            <div class="o_row mb-3">
                                <button name="action_open_subtasks_from_product" type="object" 
                                        string="Open Subtasks" class="btn-primary me-2"/>
                                <button name="action_select_existing_task_template" type="object" 
                                        string="Select Existing Template" class="btn-secondary"/>
                            </div>
                            <field name="subtask_ids" nolabel="1">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="planned_hours"/>
                                    <field name="priority"/>
                                    <field name="milestone_message"/>
                                </list>
                            </field>
                        </page>
                        <page name="extra_info" string="Extra Info" groups="base.group_no_one">
                            <group>
                                <group>
                                    <field name="checkpoint_field" 
                                           placeholder="Select checkpoint field..."
                                           options="{'no_create': True, 'no_edit': True}"/>
                                    <field name="milestone_message" 
                                           placeholder="Message to log when task checkpoint is reached"/>
                                </group>
                                <group>
                                    <div class="alert alert-info" role="alert">
                                        <strong>Task Checkpoint Field:</strong> Select a checkpoint field that will act as a boolean checkpoint for individual tasks.
                                        <br/><strong>Available Options:</strong>
                                        <br/>• Required Document Complete
                                        <br/>• Deliverable Document Complete  
                                        <br/>• Handover Complete
                                        <br/>• Compliance Complete
                                        <br/>• Partner Fields Complete
                                        <br/><strong>Note:</strong> These checkpoints are applied at the task level, not project level.
                                    </div>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Standalone Product Task Template Views -->
    <record id="product_task_template_form" model="ir.ui.view">
        <field name="name">product.task.template.form</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <form string="Product Task Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="product_tmpl_id"/>
                            <field name="user_ids" widget="many2many_avatar_user"/>
                        </group>
                        <group>
                            <field name="stage_id"/>
                            <field name="planned_hours"/>
                            <field name="priority"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" type="html"/>
                        </page>
                        <page name="subtasks" string="Subtasks">
                            <div class="o_row mb-3">
                                <button name="action_open_subtasks_from_product" type="object" 
                                        string="Open Subtasks" class="btn-primary me-2"/>
                                <button name="action_select_existing_task_template" type="object" 
                                        string="Select Existing Template" class="btn-secondary"/>
                            </div>
                            <field name="subtask_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="user_ids" widget="many2many_avatar_user"/>
                                    <field name="stage_id"/>
                                    <field name="planned_hours"/>
                                    <field name="priority"/>
                                </list>
                            </field>
                        </page>
                        <page name="checkpoints" string="Checkpoints">
                            <field name="checkpoint_ids">
                                <list editable="bottom">
                                    <field name="checkpoint_ids" widget="many2many_tags"/>
                                    <field name="stage_id"/>
                                    <field name="milestone_id"/>
                                    <field name="sequence"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_task_template_list" model="ir.ui.view">
        <field name="name">product.task.template.list</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <list string="Product Task Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="stage_id"/>
                <field name="planned_hours"/>
                <field name="priority"/>
                <field name="subtask_count"/>
                <button name="action_open_subtasks_from_product" type="object" 
                        icon="fa-tasks" title="Open Subtasks" 
                        invisible="subtask_count == 0"/>
                <button name="action_select_existing_task_template" type="object" 
                        icon="fa-plus" title="Select Existing Template"/>
            </list>
        </field>
    </record>

    <record id="product_task_template_search" model="ir.ui.view">
        <field name="name">product.task.template.search</field>
        <field name="model">product.task.template</field>
        <field name="arch" type="xml">
            <search string="Search Task Templates">
                <field name="name"/>
                <field name="product_tmpl_id"/>
                <field name="user_ids"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '1')]"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_product" domain="[]" context="{'group_by': 'product_tmpl_id'}"/>
                    <filter string="Stage" name="group_stage" domain="[]" context="{'group_by': 'stage_id'}"/>
                    <filter string="Priority" name="group_priority" domain="[]" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Product Task Templates -->
    <record id="action_product_task_templates" model="ir.actions.act_window">
        <field name="name">Product Task Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.task.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="product_task_template_list"/>
        <field name="search_view_id" ref="product_task_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No task templates found
            </p>
            <p>
                Create task templates to define standard tasks for products.
            </p>
        </field>
    </record>

    <!-- Action for Enhanced Product Task Template Form -->
    <record id="action_product_task_template_form_enhanced" model="ir.actions.act_window">
        <field name="name">Task Template</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.task.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="product_task_template_form_enhanced"/>
        <field name="target">new</field>
    </record>

    <!-- Menu Item for Product Task Templates -->
    <menuitem 
        id="menu_product_task_templates"
        name="Product Task Templates"
        parent="project.menu_project_config"
        action="action_product_task_templates"
        sequence="60"/>
    
    <!-- Product Subtask Template Views -->
    <record id="product_subtask_template_list" model="ir.ui.view">
        <field name="name">product.subtask.template.list</field>
        <field name="model">product.subtask.template</field>
        <field name="arch" type="xml">
            <list string="Product Subtask Templates">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="task_template_id"/>
                <field name="user_ids" widget="many2many_tags"/>
                <field name="stage_id"/>
                <field name="planned_hours"/>
                <field name="priority"/>
            </list>
        </field>
    </record>

    <record id="product_subtask_template_form" model="ir.ui.view">
        <field name="name">product.subtask.template.form</field>
        <field name="model">product.subtask.template</field>
        <field name="arch" type="xml">
            <form string="Product Subtask Template">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="task_template_id" required="1"/>
                            <field name="user_ids" widget="many2many_avatar_user"/>
                        </group>
                        <group>
                            <field name="stage_id"/>
                            <field name="planned_hours"/>
                            <field name="priority"/>
                            <field name="sequence"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="description" string="Description">
                            <field name="description" type="html"/>
                        </page>
                        <page name="milestone" string="Milestone">
                            <field name="milestone_message"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="product_subtask_template_search" model="ir.ui.view">
        <field name="name">product.subtask.template.search</field>
        <field name="model">product.subtask.template</field>
        <field name="arch" type="xml">
            <search string="Search Subtask Templates">
                <field name="name"/>
                <field name="task_template_id"/>
                <field name="user_ids"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '1')]"/>
                <group expand="0" string="Group By">
                    <filter string="Task Template" name="group_task_template" domain="[]" context="{'group_by': 'task_template_id'}"/>
                    <filter string="Stage" name="group_stage" domain="[]" context="{'group_by': 'stage_id'}"/>
                    <filter string="Priority" name="group_priority" domain="[]" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action for Product Subtask Templates -->
    <record id="action_product_subtask_templates" model="ir.actions.act_window">
        <field name="name">Product Subtask Templates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.subtask.template</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="product_subtask_template_list"/>
        <field name="search_view_id" ref="product_subtask_template_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No subtask templates found
            </p>
            <p>
                Create subtask templates to define standard subtasks for task templates.
            </p>
        </field>
    </record>

    <!-- Menu Item for Task Templates in Sales -->
    <menuitem 
        id="menu_sales_task_templates"
        name="Task Templates"
        parent="sale.sale_menu_root"
        action="action_product_task_templates"
        sequence="50"/>
    
    <!-- Menu Item for Subtask Templates -->
    <menuitem 
        id="menu_product_subtask_templates"
        name="Subtask Templates"
        parent="project.menu_project_config"
        action="action_product_subtask_templates"
        sequence="61"/>

</odoo> 