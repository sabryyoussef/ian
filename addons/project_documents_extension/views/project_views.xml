<odoo>
    <record id="view_project_list_documents_extension" model="ir.ui.view">
        <field name="name">project.project.list.documents.extension</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.view_project"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='display_name']" position="after">
                <field name="sale_order_id" optional="show" string="Sale Order"/>
            </xpath>
        </field>
    </record>

    <!-- Project Form View with Documents -->
    <record id="view_project_form_documents_extension" model="ir.ui.view">
        <field name="name">project.project.form.documents.extension</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.project_project_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Required Documents">
                    <div class="o_row" style="display: flex; align-items: center;">
                        <div>
                            <button name="action_complete_required_documents" type="object" string="Complete" class="btn-primary"
                                invisible="required_document_complete"/>
                            <button name="action_confirm_required_documents" type="object" string="Confirm" class="btn-secondary"
                                invisible="required_document_confirm"/>
                            <button name="action_update_required_documents" type="object" string="Update" class="btn-secondary"
                                invisible="required_document_update"/>
                        </div>
                        <div style="margin-left: 24px;">
                            <field name="required_document_complete" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_required_document_complete" type="object" string="Reset" class="btn-link"
                                invisible="not required_document_complete"/>
                            <field name="required_document_confirm" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_required_document_confirm" type="object" string="Reset" class="btn-link"
                                invisible="not required_document_confirm"/>
                            <field name="required_document_update" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_required_document_update" type="object" string="Reset" class="btn-link"
                                invisible="not required_document_update"/>
                        </div>
                    </div>
                    <field name="document_required_type_ids">
                        <list editable="bottom">
                            <field name="document_id"/>
                            <field name="is_required"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload"/>
                        </list>
                        <form>
                            <group>
                                <field name="document_id"/>
                                <field name="is_required"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </form>
                    </field>
                </page>
                <page string="Deliverable Documents">
                    <div class="o_row" style="display: flex; align-items: center;">
                        <div>
                            <button name="action_complete_deliverable_documents" type="object" string="Complete" class="btn-primary"
                                invisible="deliverable_document_complete"/>
                            <button name="action_confirm_deliverable_documents" type="object" string="Confirm" class="btn-secondary"
                                invisible="deliverable_document_confirm"/>
                            <button name="action_update_deliverable_documents" type="object" string="Update" class="btn-secondary"
                                invisible="deliverable_document_update"/>
                        </div>
                        <div style="margin-left: 24px;">
                            <field name="deliverable_document_complete" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_deliverable_document_complete" type="object" string="Reset" class="btn-link"
                                invisible="not deliverable_document_complete"/>
                            <field name="deliverable_document_confirm" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_deliverable_document_confirm" type="object" string="Reset" class="btn-link"
                                invisible="not deliverable_document_confirm"/>
                            <field name="deliverable_document_update" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_deliverable_document_update" type="object" string="Reset" class="btn-link"
                                invisible="not deliverable_document_update"/>
                        </div>
                    </div>
                    <field name="document_type_ids">
                        <list editable="bottom">
                            <field name="document_id"/>
                            <field name="is_required"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload"/>
                        </list>
                        <form>
                            <group>
                                <field name="document_id"/>
                                <field name="is_required"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

