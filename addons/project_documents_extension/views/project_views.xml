                 </page>
                                 <!-- Compliance Notes Tab (moved to main level) -->
                <page name="compliance_notes" string="Compliance Notes">
                    <group string="Compliance Workflow">
                        <div class="o_row" style="display: flex; align-items: center; gap: 8px;">
                            <button name="action_complete_compliance" type="object" string="Complete" class="btn-primary" invisible="is_complete_return_compliance"/>
                            <field name="is_complete_return_compliance" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_compliance_complete" type="object" string="Reset" class="btn-link" invisible="not is_complete_return_compliance"/>
                            <button name="action_confirm_compliance" type="object" string="Confirm" class="btn-secondary" invisible="is_confirm_compliance"/>
                            <field name="is_confirm_compliance" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_compliance_confirm" type="object" string="Reset" class="btn-link" invisible="not is_confirm_compliance"/>
                            <button name="action_update_compliance" type="object" string="Update" class="btn-secondary" invisible="is_update_compliance"/>
                            <field name="is_update_compliance" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_compliance_update" type="object" string="Reset" class="btn-link" invisible="not is_update_compliance"/>
                        </div>
                    </group>
                    <group string="Project Status Summary">
                        <field name="checkpoint_summary" readonly="1" nolabel="1" 
                               placeholder="Project checkpoint status will appear here..." widget="text"/>
                    </group>
                    <group string="Compliance Notes">
                        <field name="compliance_notes" nolabel="1" 
                               placeholder="Enter compliance notes, requirements, status updates, and regulatory information..."/>
                    </group>
                </page>
                
                <!-- Handover Notes Tab (moved to main level) -->
                <page name="handover_notes" string="Handover Notes">
                    <group>
                        <group string="Handover Status">
                            <field name="is_handover_complete"/>
                            <field name="handover_date"/>
                            <field name="handover_by"/>
                        </group>
                    </group>
                    <group>
                        <field name="handover_notes" nolabel="1" 
                               placeholder="Enter handover instructions, deliverables list, access credentials, client contacts, and project completion details..."/>
                    </group>
                </page>
                
                <!-- Project Notes Tab (remaining notes) -->
                <page name="project_notes" string="Project Notes">
                    <notebook>
                        <page name="internal_notes_tab" string="Internal Notes">
                            <group>
                                <field name="internal_notes" nolabel="1" 
                                       placeholder="Enter internal team notes, development notes, issues, and team communication..."/>
                            </group>
                        </page>
                        <page name="client_notes_tab" string="Client Notes">
                            <group>
                                <field name="client_notes" nolabel="1" 
                                       placeholder="Enter client-facing notes, communication log, feedback, and public information..."/>
                            </group>
                        </page>
                    </notebook>
                </page>
             </xpath>
         </field>
