                            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload"/>
                        </list>
                        <form>
                            <group>
                                <field name="document_id"/>
                                <field name="is_required"/>
                                <field name="attachment_ids" widget="many2many_binary"/>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
            <xpath expr="//page[@name='extra_info']" position="inside">
                <group string="Checkpoint Configuration Rules">
                    <field name="task_checkpoint_ids">
                        <list editable="bottom">
                            <field name="checkpoint_ids" widget="many2many_tags"/>
                            <field name="stage_id"/>
                            <field name="milestone_id"/>
                        </list>
                        <form>
                            <group>
                                <field name="checkpoint_ids" widget="many2many_tags"/>
                                <field name="stage_id"/>
                                <field name="milestone_id"/>
                            </group>
                        </form>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Project Return Form View -->
    <record id="project_return_form_view" model="ir.ui.view">
        <field name="name">project.return.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Return Project">
                <group>
                    <field name="name" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                </group>
                <group>
                    <field name="return_reason" required="1"/>
                    <field name="return_date" default="context_today()"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Project Update Fields Form View -->
    <record id="project_update_fields_form_view" model="ir.ui.view">
        <field name="name">project.update.fields.form</field>
        <field name="model">project.project</field>
        <field name="arch" type="xml">
            <form string="Update Project Fields">
                <group>
                    <field name="name" readonly="1"/>
                    <field name="partner_id" readonly="1"/>
                </group>
                <group>
                    <field name="update_reason" required="1"/>
                    <field name="update_date" default="context_today()"/>
                </group>
            </form>
        </field>
    </record>

    <!-- Checkpoint History List View -->
    <record id="view_checkpoint_history_list" model="ir.ui.view">
        <field name="name">checkpoint.history.list</field>
        <field name="model">checkpoint.history</field>
        <field name="arch" type="xml">
            <list>
                <field name="task_id"/>
                <field name="checkpoint_name"/>
                <field name="status"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <!-- Checkpoint History Action -->
    <record id="action_checkpoint_history" model="ir.actions.act_window">
        <field name="name">Checkpoint History</field>
        <field name="res_model">checkpoint.history</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_checkpoint_history_list"/>
    </record>

</odoo> 