     <!-- Task Document View - Re-enabled -->
    <record id="view_task_form2_checkpoint_extension" model="ir.ui.view">
        <field name="name">project.task.form2.checkpoint.extension</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page string="Required Documents">
                    <field name="document_required_type_ids">
                        <list editable="bottom">
                            <field name="document_type_id"/>
                            <field name="document_id"/>
                            <field name="is_required"/>
                            <field name="number"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload"/>
                        </list>
                    </field>
                </page>
                <page string="Deliverable Documents">
                    <field name="document_type_ids">
                        <list editable="bottom">
                            <field name="document_type_id"/>
                            <field name="document_id"/>
                            <field name="is_required"/>
                            <field name="number"/>
                            <field name="attachment_ids" widget="many2many_binary"/>
                            <button name="action_upload_document" type="object" string="Upload" icon="fa-upload"/>
                        </list>
                    </field>
                                </page>
            </xpath>
            
            <!-- Add to existing Extra Info tab -->
            <xpath expr="//page[@name='extra_info']" position="inside">
                <!-- Combined Documents Workflow Section -->
                <group string="Documents Workflow">
                    <div class="o_row" style="display: flex; align-items: center; gap: 16px; flex-wrap: wrap;">
                        <!-- Required Documents Section -->
                        <div style="display: flex; align-items: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                            <strong style="margin-right: 12px;">Required:</strong>
                            <button name="action_complete_required_documents" type="object" string="Complete" class="btn-sm btn-primary"
                                invisible="required_document_complete"/>
                            <button name="action_confirm_required_documents" type="object" string="Confirm" class="btn-sm btn-secondary"
                                invisible="required_document_confirm"/>
                            <button name="action_update_required_documents" type="object" string="Update" class="btn-sm btn-secondary"
                                invisible="required_document_update"/>
                            <field name="required_document_complete" widget="boolean_toggle" readonly="1" style="margin-left: 8px;"/>
                            <button name="action_reset_required_document_complete" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not required_document_complete"/>
                            <field name="required_document_confirm" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_required_document_confirm" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not required_document_confirm"/>
                            <field name="required_document_update" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_required_document_update" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not required_document_update"/>
                        </div>
                        
                        <!-- Deliverable Documents Section -->
                        <div style="display: flex; align-items: center; padding: 8px; border: 1px solid #ddd; border-radius: 4px;">
                            <strong style="margin-right: 12px;">Deliverable:</strong>
                            <button name="action_complete_deliverable_documents" type="object" string="Complete" class="btn-sm btn-primary"
                                invisible="deliverable_document_complete"/>
                            <button name="action_confirm_deliverable_documents" type="object" string="Confirm" class="btn-sm btn-secondary"
                                invisible="deliverable_document_confirm"/>
                            <button name="action_update_deliverable_documents" type="object" string="Update" class="btn-sm btn-secondary"
                                invisible="deliverable_document_update"/>
                            <field name="deliverable_document_complete" widget="boolean_toggle" readonly="1" style="margin-left: 8px;"/>
                            <button name="action_reset_deliverable_document_complete" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not deliverable_document_complete"/>
                            <field name="deliverable_document_confirm" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_deliverable_document_confirm" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not deliverable_document_confirm"/>
                            <field name="deliverable_document_update" widget="boolean_toggle" readonly="1"/>
                            <button name="action_reset_deliverable_document_update" type="object" string="Reset" class="btn-sm btn-link"
                                invisible="not deliverable_document_update"/>
                        </div>
                    </div>
                </group>
                
                <!-- Checkpoint Configuration Rules Section -->
                <group string="Checkpoint Configuration Rules">
                    <div class="oe_button_box">
                        <button name="action_copy_checkpoints_from_template" 
                                type="object" 
                                string="Copy from Template" 
                                class="btn-secondary"
                                help="Copy checkpoint configuration from the matching product task template"/>
                    </div>
                    <field name="task_checkpoint_ids">
                        <list editable="bottom">
                            <field name="checkpoint_ids" widget="many2many_tags"/>
                            <field name="stage_id"/>
                            <field name="milestone_id"/>
                            <field name="sequence"/>
                        </list>
                        <form>
                            <group>
                                <field name="checkpoint_ids" widget="many2many_tags"/>
                                <field name="stage_id"/>
                                <field name="milestone_id"/>
                                <field name="sequence"/>
                            </group>
                        </form>
                    </field>
                </group>
            </xpath>
        </field>
    </record>

