<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Enhanced Milestone Tree View -->
        <record id="view_project_milestone_tree_enhanced" model="ir.ui.view">
            <field name="name">project.milestone.tree.enhanced</field>
            <field name="model">project.milestone</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Project Milestones" decoration-success="can_be_marked_as_done"
                      decoration-danger="is_deadline_exceeded and not can_be_marked_as_done"
                      decoration-muted="is_reached" editable="bottom">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="deadline" optional="show"/>
                    <field name="is_reached" optional="show"/>
                    <field name="checkpoint_count" string="Checkpoints"/>
                    <field name="mail_template_id" optional="show"/>
                    <field name="milestone_message" optional="show"/>
                    <field name="task_count" invisible="1"/>
                    <field name="can_be_marked_as_done" invisible="1"/>
                    <field name="is_deadline_exceeded" invisible="1"/>
                    <button name="action_view_tasks" type="object" title="View Tasks" string="Tasks" 
                            class="btn btn-link float-end" invisible="task_count == 0"/>
                    <button name="action_view_checkpoints" type="object" title="View Checkpoints" 
                            string="Checkpoints" class="btn btn-link float-end" invisible="checkpoint_count == 0"/>
                </list>
            </field>
        </record>

        <!-- Enhanced Milestone Form View -->
        <record id="view_project_milestone_form_enhanced" model="ir.ui.view">
            <field name="name">project.milestone.form.enhanced</field>
            <field name="model">project.milestone</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Project Milestone">
                    <sheet>
                        <group name="milestone_info">
                            <group>
                                <field name="name"/>
                                <field name="project_id"/>
                                <field name="deadline"/>
                            </group>
                            <group>
                                <field name="mail_template_id"/>
                                <field name="is_reached"/>
                                <field name="checkpoint_count"/>
                                <field name="task_count"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Milestone Message" name="milestone_message">
                                <field name="milestone_message" placeholder="Enter milestone message here..." nolabel="1"/>
                            </page>
                            <page string="Checkpoints" name="checkpoints" invisible="checkpoint_count == 0">
                                <field name="checkpoint_ids" readonly="1">
                                    <list>
                                        <field name="task_id"/>
                                        <field name="sequence"/>
                                        <field name="stage_id"/>
                                        <field name="checkpoint_ids" widget="many2many_tags"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Tasks" name="tasks" invisible="task_count == 0">
                                <field name="task_ids" readonly="1">
                                    <list>
                                        <field name="name"/>
                                        <field name="stage_id"/>
                                        <field name="user_ids" widget="many2many_tags"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Enhanced Milestone Search View -->
        <record id="view_project_milestone_search_enhanced" model="ir.ui.view">
            <field name="name">project.milestone.search.enhanced</field>
            <field name="model">project.milestone</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Project Milestones">
                    <field name="name"/>
                    <field name="project_id"/>
                    <field name="mail_template_id"/>
                    <field name="checkpoint_count"/>
                    <filter string="Reached" name="is_reached" domain="[('is_reached', '=', True)]"/>
                    <filter string="Not Reached" name="not_reached" domain="[('is_reached', '=', False)]"/>

                    <filter string="With Email Template" name="with_email_template" domain="[('mail_template_id', '!=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Project" name="group_by_project" context="{'group_by': 'project_id'}"/>
                        <filter string="Reached" name="group_by_reached" context="{'group_by': 'is_reached'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Checkpoint Tree View -->
        <record id="view_task_checkpoint_tree" model="ir.ui.view">
            <field name="name">task.checkpoint.tree</field>
            <field name="model">task.checkpoint</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Task Checkpoints">
                    <field name="sequence" widget="handle"/>
                    <field name="task_id"/>
                    <field name="milestone_id"/>
                    <field name="stage_id"/>
                    <field name="checkpoint_ids" widget="many2many_tags"/>
                </list>
            </field>
        </record>

        <!-- Checkpoint Form View -->
        <record id="view_task_checkpoint_form" model="ir.ui.view">
            <field name="name">task.checkpoint.form</field>
            <field name="model">task.checkpoint</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Task Checkpoint">
                    <sheet>
                        <group>
                            <group>
                                <field name="task_id"/>
                                <field name="milestone_id"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="stage_id"/>
                                <field name="checkpoint_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Checkpoint Search View -->
        <record id="view_task_checkpoint_search" model="ir.ui.view">
            <field name="name">task.checkpoint.search</field>
            <field name="model">task.checkpoint</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Task Checkpoints">
                    <field name="task_id"/>
                    <field name="milestone_id"/>
                    <field name="stage_id"/>
                    <filter string="With Milestone" name="with_milestone" domain="[('milestone_id', '!=', False)]"/>
                    <filter string="Without Milestone" name="without_milestone" domain="[('milestone_id', '=', False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Task" name="group_by_task" context="{'group_by': 'task_id'}"/>
                        <filter string="Milestone" name="group_by_milestone" context="{'group_by': 'milestone_id'}"/>
                        <filter string="Stage" name="group_by_stage" context="{'group_by': 'stage_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_task_checkpoint" model="ir.actions.act_window">
            <field name="name">Task Checkpoints</field>
            <field name="res_model">task.checkpoint</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first task checkpoint!
                </p>
                <p>
                    Task checkpoints help track progress and milestones in your projects.
                </p>
            </field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_task_checkpoint"
                  name="Task Checkpoints"
                  parent="project.menu_project_management"
                  action="action_task_checkpoint"
                  sequence="50"/>
    </data>
</odoo> 