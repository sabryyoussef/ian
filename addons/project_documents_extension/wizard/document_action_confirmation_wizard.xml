<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Document Action Confirmation Wizard Form View -->
        <record id="view_document_action_confirmation_wizard_form" model="ir.ui.view">
            <field name="name">document.action.confirmation.wizard.form</field>
            <field name="model">document.action.confirmation.wizard</field>
            <field name="arch" type="xml">
                <form string="Confirm Action">
                    <group>
                        <field name="title" readonly="1"/>
                        <field name="message" readonly="1"/>
                        <field name="action_type" invisible="1"/>
                        <field name="record_id" invisible="1"/>
                        <field name="record_model" invisible="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm" string="Yes, Proceed" type="object" class="btn-primary"/>
                        <button name="action_cancel" string="No, Cancel" type="object" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Document Action Confirmation Wizard Action -->
        <record id="action_document_action_confirmation_wizard" model="ir.actions.act_window">
            <field name="name">Confirm Action</field>
            <field name="res_model">document.action.confirmation.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="view_document_action_confirmation_wizard_form"/>
        </record>
    </data>
</odoo> 