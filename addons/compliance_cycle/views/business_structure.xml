<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Business Structure List View -->
        <record id="res_partner_business_structure_list" model="ir.ui.view">
            <field name="name">res.partner.business.structure.list</field>
            <field name="model">res.partner.business.structure</field>
            <field name="arch" type="xml">
                <list>
                    <field name="name"/>
                    <field name="code"/>
                    <field name="partner_count"/>
                    <field name="active" invisible="1"/>
                </list>
            </field>
        </record>

        <!-- Business Structure Form View -->
        <record id="res_partner_business_structure_form" model="ir.ui.view">
            <field name="name">res.partner.business.structure.form</field>
            <field name="model">res.partner.business.structure</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="partner_count"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Description">
                                <field name="description" placeholder="Enter description..."/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Business Structure Search View -->
        <record id="res_partner_business_structure_search" model="ir.ui.view">
            <field name="name">res.partner.business.structure.search</field>
            <field name="model">res.partner.business.structure</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="code"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <!-- Business Structure Action -->
        <record id="action_res_partner_business_structure" model="ir.actions.act_window">
            <field name="name">Business Structures</field>
            <field name="res_model">res.partner.business.structure</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="res_partner_business_structure_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first business structure!
                </p>
            </field>
        </record>

        <!-- Menu Item - Commented out for now to avoid menu dependency issues -->
